<!DOCTYPE html>
<html>
<head>
  <title>School Equipment Auditing System</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<style>
	body{
		background: linear-gradient(to top, #8300b3 5%,white 5%);
	}
</style>

<body style="padding-left:3%; padding-right:3%; padding-top:1%; padding-bottom:3%">
<div style="border:1px solid lightgrey">
	<div align="center">
		<img src="../images/banner.png" width="100%"></img>
	</div>
<div style="background-color:white; padding-left:0%">
<% if request.env['PATH_INFO']!='/welcome/index' && request.env['PATH_INFO']!='/'  %>

	<%= render 'shared/navbar' %>

<div class="container" >
  <div class="row">

	</div>
	<div class="col-sm-3" style="padding-left:0%; width:23%; padding-top:3%" >
		
			<%= render 'shared/sidebar' %>
		
	</div>
		<div class="col-sm-9" style="padding-top:20px">
			<%= yield %>
	  	</div>
  	</div>
</div>

</div>
<!-- ------------------------------------------------------------------------- -->
<% else %>
<%= render 'shared/navbar' %>

<div class="container" style="padding-left:0; width: 100%">
  <div class="row">

	</div>
	<div>
		
	</div>
		<div class="col-sm-12">
			<%= yield %>
	  	</div>
  	</div>
</div>

</div>
<% end %>
</div>
</div>
</body>
</html>
